package sec2;

public class Account {
	String acc;
	String accUser;
	int balance;
	int money;
	final static int MIN_MONEY=0;
	
	public String getAcc() {
		return acc;
	}
	public void setAcc(String acc) {
		this.acc = acc;
	}
	public String getAccUser() {
		return accUser;
	}
	public void setAccUser(String accUser) {
		this.accUser = accUser;
	}
	public int getBalance() {
		return balance;
	}
	public void setBalance(int balance) {
		this.balance = balance;
	}
	public int getMoney() {
		return money;
	}
	public void setMoney(int money) {
		this.money = money;
	}
	
	public int runDeposit(){
		this.balance=this.money+1000;
		return balance;
	}
	public int runWithdraw(){
		if(this.balance>this.MIN_MONEY){
			this.balance=this.money-1000;
		}
		return balance;
	}
	public int runBalance(){
		return balance;
	}
	public void printAccount(){
		System.out.println("계좌번호: "+this.acc+", 계좌주: "+this.accUser+", 잔액: "+this.balance);
	}
	
}

