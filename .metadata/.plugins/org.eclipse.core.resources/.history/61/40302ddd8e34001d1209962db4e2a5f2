package sec3;

public class Loop8 {

	public static void main(String[] args) {
		// 이중 for문을 활용하여 아래와 같은 형태의 구구단을 출력	교재  ~ p.134(과제)
/*
	2*1=2	3*1=3	...	9*1=9
 	2*2=4
  	...
  	2*9=18	3*9=27	... 9*9=81
 */
		for(int a=1;a<=9;a++){
/*			if(a==9){
				System.out.println("\n");
			}
*/			for(int b=2;b<=9;b++){
				if((a*b)<=81){
					System.out.print(b+"*"+a+"="+(a*b)+"\t");
				}
				
			}
		}
	}

}
